<%= render 'shared/errors', obj: @student %>

<div class="container">
  <div class="row center sign-up-form">
    <div class="col s12 m12 l12">
      <div class="card-panel">
        <h3 class="header"><%= @student.new_record? ? "Sign up" : "Edit your profile" %></h3>
        <div class="row">
          <%= form_for(@student, html: {class: "col s12"}) do |f| %>
            <div class="row">
              <div class="input-field col12">
                <%= f.text_field :name, placeholder: "Enter your full name", autofocus: true %>
                <%= f.label :name %>
              </div>
            </div>  
            <div class="row">
              <div class="input-field col12">
                <%= f.email_field :email, placeholder: "Enter your email address" %>
                <%= f.label :email %>
              </div>
            </div> 
            <div class="row">
              <div class="input-field col12"> 
                <%= f.submit(@student.new_record? ? "Sign up" : "Submit updates", class: "waves-effect waves-light btn right") %>
              </div>
            </div>  
          <% end %>
        </div>
      </div>        
    </div>          
  </div>
</div> 